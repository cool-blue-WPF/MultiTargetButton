                    </cmd:MultiTargetCommand>
                        
                </b:ContentButton.Command>
            </b:ContentButton>

            <b:ContentButton Name="cbButton" Height="30" Margin="0,16,0,0"
                             ToolTip="CommandTarget null"
                             Content="Toggle Binding" Foreground="#FFE61818"
                             Command="cmd:OutputToggleEnabled.Ex" />

        </StackPanel>-->

        <b:ContentButton x:Name="MultiEnable" Height="30" Margin="0,16,0,0"
                         ToolTip="{Binding RelativeSource={RelativeSource Self},
                                    Path=Name}"
                         BorderBrush="#FFF00E0E" >

            <TextBlock Text="{Binding ElementName=ToggleEnable, Path=Content}"></TextBlock>
            <b:ContentButton.Command>

                <cmd:MultiTargetCommand Command="cmd:OutputToggleEnabled.Ex" 
                                        CommandParameter="Multi Target">

                    <cmd:CommandTarget Target="{Binding ElementName=Toggle}" />
                    <cmd:CommandTarget Target="{Binding ElementName=clrToggle}" />
                    
                    <!--todo get binding to standard button to work-->
                    <!--<cmd:CommandTarget Target="{Binding ElementName=ToggleEnable}" />-->

                </cmd:MultiTargetCommand>
                
            </b:ContentButton.Command>
        </b:ContentButton>
        <Button x:Name="ToggleEnable" Height="30"
                Command="cmd:OutputToggleEnabled.Ex"
                CommandTarget="{Binding ElementName=MultiEnable}">
        </Button>

    </StackPanel>
</Window>