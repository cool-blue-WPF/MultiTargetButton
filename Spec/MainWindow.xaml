<Window x:Class="Spec.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:b="clr-namespace:ContentToggleButton;assembly=ContentToggleButton"
        xmlns:local="clr-namespace:Spec"
        Title="MainWindow" Height="350" Width="525">
    
    <Grid Margin="20,20,20,20">
        <Grid.RowDefinitions >
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <b:ContentToggle Name="Toggle" Height="30" 
                         />
        <b:ContentButton Grid.Row="1" x:Name="Plain" Height="30" 
                         />
    </Grid>
</Window>































